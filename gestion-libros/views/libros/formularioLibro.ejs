<div class="container mt-4">
  <h1 class="mb-4"><%= libro ? 'Editar Libro' : 'Nuevo Libro' %></h1>

  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form action="<%= libro ? '/libros/' + libro.id + '?_method=PUT' : '/libros' %>" method="POST">
    <div class="form-group">
      <label for="titulo">Título</label>
      <input type="text" id="titulo" name="titulo" class="form-control" 
             value="<%= libro ? libro.titulo : '' %>" required>
    </div>

    <div class="form-group">
      <label for="autor">Autor</label>
      <input type="text" id="autor" name="autor" class="form-control" 
             value="<%= libro ? libro.autor : '' %>" required>
    </div>

    <div class="form-group">
      <label for="anio_publicacion">Año de Publicación</label>
      <input type="number" id="anio_publicacion" name="anio_publicacion" 
             class="form-control" value="<%= libro ? libro.anio_publicacion : '' %>" required>
    </div>

    <div class="form-group">
      <label for="genero">Género</label>
      <input type="text" id="genero" name="genero" class="form-control" 
             value="<%= libro ? libro.genero : '' %>" required>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary mr-2">
        <%= libro ? 'Actualizar' : 'Crear' %>
      </button>
      <a href="/libros" class="btn btn-secondary">Cancelar</a>
    </div>
  </form>
</div>